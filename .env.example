# Database Configuration
# Copy this file to .env and update the values
DATABASE_URL=postgresql://hermes_user:YOUR_SECURE_PASSWORD_HERE@localhost:5432/hermes

# Security
# IMPORTANT: Generate a new SECRET_KEY for production with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
# Set to "production" to enable HTTPS enforcement and other production security features
ENV=development

# HTTPS & Host Security (Production Only)
# ALLOWED_HOSTS: Comma-separated list of allowed hostnames (prevents host header attacks)
# Example: ALLOWED_HOSTS=api.example.com,www.example.com
# Use "*" to allow all hosts (NOT recommended for production)
ALLOWED_HOSTS=*
